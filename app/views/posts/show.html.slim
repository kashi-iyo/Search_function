p= @post.title
p= @post.description
p= @post.content
p= "PV：#{@post.impressionist_count}"

- if @post.favorited_by?(current_user)
  p= link_to "いいね：#{@post.favorites.count}", post_favorites_path(@post.id), method: :delete
- else
  p= link_to "いいね：#{@post.favorites.count}", post_favorites_path(@post.id), method: :post

